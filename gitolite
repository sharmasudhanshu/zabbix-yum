apt-get install git    ### on git server & remote server
apt-get install gitolite   ### on git server
sudo adduser --system --group --shell /bin/bash --disabled-password git  ### on git server

sudo adduser --system --group --shell /bin/bash --disabled-password john   ### on remote server,
### on remote host as any user ,  generate keys , say for user john
ssh-keygen -t rsa  

### now on git server  ,  execute  command , gl-setup /tmp/john.pub  ,with  john's public key
sudo su - git
git@network:~$ gl-setup /tmp/john.pub    ### on git,gitolite server
